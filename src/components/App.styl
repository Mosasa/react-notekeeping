.App
  width 100%
  height 100%
  .tab-view
    position fixed
  .app-footer
    width 100%
    height 50px
    border-top 1px solid #888
    position fixed
    bottom 10px
    left 0
  .footer-tab
    display flex
    justify-content space-around
    height 50px
    line-height 50px
    font-size 12px
    .tab-item
      flex 1
      width 32px 
      margin-right 30px
      margin-left 24px
      .nav-link
        display flex
        flex-direction column
        text-decoration none
        color #888
        .tab-logo
          width 25px
          height 25px
          position relative
          bottom -10px
          color #888
      

