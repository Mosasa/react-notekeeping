@import '~antd/dist/antd.css';
.app
  width 100%
  height 100%
  display flex
  justify-content space-between
  .timeline
    width 300px
    height 100%
    margin-top 1em
    margin-left: 4em;
    flex 0
    .topDot
      width: 120px;
      height: 30px;
      line-height: 24px;
      color #000
      border 2px solid #888
      border-radius 60px
      .iconDot
        width 18px
        height 18px
        padding-left 4px
    .preCount
      width 80px
      height 80px
      color #fff
      background #B8B8B8
      border-radius 50%
      text-align center
      position relative
      span 
        position absolute
        top 35%
        right 4%
        margin auto
    .input
      position absolute
      top 15%
      left 14%
      display flex
      flex-direction column
    .output
      position absolute
      top 15%
      right 14%
      display flex
      flex-direction column
    .ant-timeline
      margin 0 auto
      text-align center
      .ant-timeline-item
        height 100px
  .gift, .date
    margin-top 0.2em  