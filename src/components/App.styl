.App
  width 100%
  height 100%
  background #fff
  .tab-view
    width 100%
    height 100%
    z-index 0
  .app-footer
    width 100%
    background #fff
    height 60px
    border-top 1px solid #888
    position fixed
    bottom 0
    left 0
    z-index 3
  .footer-tab
    display flex
    justify-content space-around
    height 60px
    line-height 50px
    font-size 12px
    .tab-item
      flex 1
      width 32px 
      margin-right 30px
      margin-left 24px
      .nav-link
        display flex
        flex-direction column
        text-decoration none
        color #888
        &.active
          color #1296db
        .tab-logo-active
          width 40px
          height 40px
          position relative
          top 10px
        .tab-logo
          width 25px
          height 25px
          position relative
          bottom -10px
          color #888
      

